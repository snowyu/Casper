<div class="floating-header">
    <div class="floating-header-logo">
        <a href="{{@blog.url}}">
            {{#if @blog.icon}}
                <img src="{{@blog.icon}}" alt="{{@blog.title}} icon" />
            {{/if}}
            <span>{{@blog.title}}</span>
        </a>
    </div>
    <span class="floating-header-divider">&mdash;</span>
    <div class="floating-header-title">{{title}}</div>
    <div class="floating-header-share">
        <div class="floating-header-share-label">分享到 {{> "icons/point"}}</div>
        <div class="social-share" data-mobile-sites="weibo,qq,qzone,tencent"></div>
    </div>
    <progress class="progress" value="0">
        <div class="progress-container">
            <span class="progress-bar"></span>
        </div>
    </progress>
</div>

{{!-- The #contentFor helper here will send everything inside it up to the matching #block helper found in default.hbs --}}
{{#contentFor "head"}}
  <link rel="stylesheet" type="text/css" href="{{asset "css/share.min.css"}}" />
{{/contentFor}}

{{#contentFor "scripts"}}
  <script src="{{asset "js/social-share.min.js"}}"></script>
{{/contentFor}}
